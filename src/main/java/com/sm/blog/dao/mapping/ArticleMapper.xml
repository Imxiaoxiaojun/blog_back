<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sm.blog.dao.ArticleMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.sm.blog.model.Article">
        <id column="id" property="id" />
        <result column="title" property="title" />
        <result column="content" property="content" />
        <result column="summary" property="summary" />
        <result column="hits" property="hits" />
        <result column="image_url" property="imageUrl" />
        <result column="category_id" property="categoryId" />
        <result column="create_time" property="createTime" />
        <result column="update_timUe" property="updateTimue" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, title, content, summary, hits, image_url AS imageUrl, category_id AS categoryId, create_time AS createTime, update_timUe AS updateTimue
    </sql>

</mapper>
